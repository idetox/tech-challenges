root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.feature]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
trim_trailing_whitespace = false

[*.html.twig]
indent_size = 2

[*.scss]
indent_size = 2

[*.js]
indent_size = 2
